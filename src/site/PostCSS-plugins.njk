<header role="banner" class="header clear">
  <h1>
    PostCSS plugins
    <span class="page-description">A collection of PostCSS plugins</span>
  </h1>
</header>

<p class="highlight-text" id="js-skip-link-target">
  ckmwdeg gergergge gremcflmf;m;em,le
  <p>

    {% for post in collections.postcss %}
      <article class="postcss__post js-content-group" data-url="{{ post.data.github }}" data-title="{{post.data.title}}">
        <header class="postcss__header">
          <h3 class="postcss__title">
            <a href="{{ post.data.github }}">
              <span class="visually-hidden">Plugin title</span>
              {{ post.data.title }}
            </a>
          </h3>
          <p>{{ post.data.description | safe }}</p>
          <p>
            <a href="{{ post.data.demo}}" title="View a demo">Demo</a>
          </p>
          <p>
            <span class="visually-hidden">Date created</span>
            <time datetime="{{ post.data.date }}">{{ post.data.date | dateDisplay }}</time>
          </p>
        </header>
      </article>
    {%- endfor -%}
