---
title: Project tags
description: Tags
pageName: Projects
pageDescription: A collection design and front end development work
layout: layouts/base.njk
pagination:
  data: collections.projects
  size: 1
  alias: tag
permalink: projects/tags/{{ tag.data.projectTags[0] | lower | replace(" ", "-")}}/ 
---


<h1> {{ tag.data.projectTags[0] }} projects</h1>

<section class="project">

{% for post in collections.projects %}
 {% if tag.data.projectTags[0] in post.data.projectTags %}
    <article class="project__post js-content-group" data-url="{{ post.url }}" data-title="{{post.data.title}}">
      <h3 class="project__title">
        <a href="{{ post.url }}">
          <span class="visually-hidden">Project title</span>
          {{ post.data.title }} 
        </a>
      </h3>
      <div class="image-ratio project__img"> 
        <img data-src="{{ post.data.image }}" class="lazyload" alt="{{ post.data.title }} image">
      </div>
      <p class="project__date">
        <span class="visually-hidden">Project date</span>
        <time datetime="{{ post.data.date }}">{{ post.data.date | dateDisplay }}</time>
      </p>
    </article> 
  {% endif %}
{% endfor %}







  
</section> 

