<ul class="social-media">
  {% for item in socialMedia %} 
		<li class="social-media__item">
			<a href="{{ item.url }}" class="anchor social-media__anchor" target="_blank" rel="noopener">
			<span>{{ item.description }}</span>
				<svg version="1.1" width="100" height="100" role="img" viewBox="{{ item.viewBox }}" aria-labelledby="{{ item.title }}TitleFooter {{ item.title }}DescFooter">
					<title id="{{ item.title }}TitleFooter">{{ item.title }}</title>
   				<desc id="{{ item.title }}DescFooter">link to {{ item.title }} profile</desc>
			  	<path d="{{ item.path }}"/>
				</svg>
		 	</a>
		</li>
  {% endfor %}
</ul> 