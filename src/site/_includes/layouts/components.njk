{% set componentHtml %}
  {% include "components/" + page.fileSlug + ".njk" %}
{% endset %}  

{% set componentCSS %}
  {% include "css/6-components/" + page.fileSlug +".css" %}
{% endset %}

{% set componentJS %}
  {% include "js/" + page.fileSlug + ".js"  ignore missing %}
{% endset %}

<!doctype html>
<html lang="en">
