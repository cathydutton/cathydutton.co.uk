<ul class="social-media">
  {% for item in socialMedia %} 
		<li class="social-media__item">
			<a href="{{ item.url }}" class="social-media__anchor" aria-label="{{ item.title }}" target="_blank">
				<span class="visually-hidden">{{ item.description }} - opens an external site</span>
				<svg version="1.1" width="100" height="100" role="img" viewBox="{{ item.viewBox }}" aria-labelledby="title" aria-describedby="desc">
					<title id="title">View my {{ item.title }} profile</title>
   				<desc id="desc">link to {{ item.title }} profile</desc>
			  	<path d="{{ item.path }}"/>
				</svg>
		 	</a>
		</li>
  {% endfor %}
</ul> 


 
